@Controller
@RequestMapping("/admin")
public class CategoryCotroller {
	
	@Autowired
	private ICategoryMapper	categoryMapper;
	
	/**
	 * 进入添加分类页面
	 * 方法名：list<br/>
	 * 创建人：李雄杰  <br/>
	 * 时间：2017年11月9日-下午11:01:53 <br/>
	 * 手机:1564545646464<br/>
	 * @return String<br/>
	 * @exception <br/>
	 * @since  1.0.0<br/>
	 */
	@RequestMapping(value="/add",method=RequestMethod.POST)
	public String list() {
		return "/category/add";
	}
	
	/**
	 * 分类主页
	 * 方法名：category<br/>
	 * 创建人：李雄杰  <br/>
	 * 时间：2017年11月9日-下午11:02:47 <br/>
	 * 手机:1564545646464<br/>
	 * @param model
	 * @param params
	 * @return String<br/>
	 * @exception <br/>
	 * @since  1.0.0<br/>
	 */
	@RequestMapping(value="category",method=RequestMethod.POST)
	public String category(Model model,Params params) {
		//查询数据
		List<Category> category=categoryMapper.findCategory(params);
		//查询出总条数
		int count=categoryMapper.selectCount();
		//放入作用域中
		model.addAttribute("category", category);
		model.addAttribute("count", count);
		return "/category/category";
	}
	
	/**
	 * 查询出数据
	 * 方法名：seav<br/>
	 * 创建人：李雄杰  <br/>
	 * 时间：2017年11月9日-下午11:03:15 <br/>
	 * 手机:1564545646464<br/>
	 * @param model
	 * @param params
	 * @return String<br/>
	 * @exception <br/>
	 * @since  1.0.0<br/>
	 */
	@RequestMapping(value="/aseav",method=RequestMethod.POST)
	public String seav(Model model,Params params){
		//查询数据
		List<Category> category=categoryMapper.findCategory(params);
		//放入作用域中
		model.addAttribute("category", category);
		return "/category/templates";
	}
	
	/**
	 * 添加分类
	 * 方法名：save<br/>
	 * 创建人：李雄杰  <br/>
	 * 时间：2017年11月9日-下午11:03:34 <br/>
	 * 手机:1564545646464<br/>
	 * @param category
	 * @return String<br/>
	 * @exception <br/>
	 * @since  1.0.0<br/>
	 */
	@RequestMapping(value="/category/sava",method=RequestMethod.POST)
	@ResponseBody
	public String save(Category category){
		categoryMapper.savaCategory(category);
		if(category.getId()!=null){
			return "success";
		}else{
			return "fail";
		}
	}
	
	/**
	 * 修改分类的数据
	 * 方法名：update<br/>
	 * 创建人：李雄杰  <br/>
	 * 时间：2017年11月9日-下午11:03:48 <br/>
	 * 手机:1564545646464<br/>
	 * @param category
	 * @return String<br/>
	 * @exception <br/>
	 * @since  1.0.0<br/>
	 */
	@RequestMapping(value="/category/update",method=RequestMethod.POST)
	@ResponseBody
	public String update(Category category){
		int count=categoryMapper.updateCategory(category);
		if(count==1){
			return "success";
		}else{
			return "fail";
		}
	}
	
	
}
